{
  "rules": {
    "siteSettings": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "navigation": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "home": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "products": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "gallery": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "testimonials": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },

    "verifications": {
      ".read": true,
      ".write": true,
      ".indexOn": ["paymentId"]
    },

    "orders": {
      ".read": true,
      ".write": true,
      ".indexOn": ["paymentId", "orderId"]
    },

    ".read": false,
    ".write": false
  }
}
