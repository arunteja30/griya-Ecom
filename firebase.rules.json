{
  "rules": {
    "siteSettings": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "navigation": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "home": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "categories": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "products": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true",
      ".indexOn": ["categoryId"]
    },
    "gallery": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },
    "testimonials": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },

    "orders": {
      ".read": "auth != null && (auth.token.isAdmin === true || data.child('customerId').val() === auth.uid)",
      ".write": "auth != null"
    },

    "categoryProducts": {
      ".read": true,
      ".write": "auth != null && auth.token.isAdmin === true"
    },

    ".read": false,
    ".write": false
  }
}
